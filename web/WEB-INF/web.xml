        <url-pattern>/ConfirmBooking</url-pattern>
    </servlet-mapping>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <security-role>
        <role-name> Admin </role-name>
    </security-role>
    <security-role>
        <role-name> Manager </role-name>
    </security-role>
    <security-role>
        <role-name> Guest </role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name> AdminPages</web-resource-name>
            <url-pattern>/adminhome.jsp/* </url-pattern>
            <url-pattern>/checkAvailability.jsp/* </url-pattern>
            <url-pattern>/dealsofflights.jsp/* </url-pattern>
            <url-pattern>/flightaddition.jsp/* </url-pattern>
            <url-pattern>/setprices.jsp/* </url-pattern>
            <url-pattern>/setseats.jsp/* </url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name> Admin </role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>ManagerPages</web-resource-name>
            <url-pattern>/Listofseats.jsp/* </url-pattern>
            <url-pattern>/approvedeals.jsp/* </url-pattern>
            <url-pattern>/approveprice.jsp/* </url-pattern>
            <url-pattern>/approveseats.jsp/* </url-pattern>
            <url-pattern>/manager home.jsp/* </url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name> Manager </role-name>
        </auth-constraint>
    </security-constraint>
