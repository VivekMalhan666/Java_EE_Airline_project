        <servlet-name>signupp</servlet-name>
        <servlet-class>Servlets.sign</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>avail</servlet-name>
        <servlet-class>Servlets.Availability</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getprice</servlet-name>
        <servlet-class>Servlets.GetPrice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>approveprices</servlet-name>
        <servlet-class>Servlets.Approve</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>disapproveprices</servlet-name>
        <servlet-class>Servlets.Disapprove</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getseats</servlet-name>
        <servlet-class>Servlets.GetSeats</servlet-class>
    </servlet>
    <servlet>
